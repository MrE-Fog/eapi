{
  "compilerOptions": {
    "declaration": true,
    "preserveSymlinks": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext",
      "webworker"
    ],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": [
      "@cloudflare/workers-types",
      "@p-j/eapi-types"
    ]
  },
  "include": [
    "./packages/**/src/*.ts",
    "./packages/**/__tests__/*.ts",
    "./packages/**/src/**/*.ts",
    "./packages/**/__tests__/**/*.ts",
    "./packages/**/node_modules/@cloudflare/workers-types/index.d.ts",
    "./packages/**/node_modules/@p-j/eapi-types/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}